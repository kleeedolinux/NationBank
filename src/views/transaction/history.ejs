
<div class="max-w-6xl mx-auto">
  <h1 class="text-2xl font-bold mb-6">Transaction History</h1>
  
  <div class="bg-white rounded-lg shadow">
    <table class="w-full">
      <thead class="bg-gray-50">
        <tr>
          <th class="p-4">Date</th>
          <th class="p-4">Type</th>
          <th class="p-4">Amount</th>
          <th class="p-4">Description</th>
        </tr>
      </thead>
      <tbody>
        <% transactions.forEach(transaction => { %>
          <tr class="border-t">
            <td class="p-4"><%= transaction.createdAt.toLocaleString() %></td>
            <td class="p-4"><%= transaction.type %></td>
            <td class="p-4">
              <%= systemConfig.currencySymbol %>
              <%= (transaction.senderId === user.id ? -transaction.amount : transaction.amount).toFixed(2) %>
            </td>
            <td class="p-4"><%= transaction.description || '-' %></td>
          </tr>
        <% }) %>
      </tbody>
    </table>
  </div>
</div> 